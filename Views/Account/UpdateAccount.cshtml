@model AppUserModel
@{
    ViewData["title"] = "Cập nhật thông tin tài khoản";
}


<h3>Cập nhật thông tin tài khoản</h3>

<div class="col-md-9">
    <form autocomplete="off" asp-action="UpdateInfoAccount" asp-controller="Account" method="POST">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Tên đăng nhập</label>
            <input asp-for="UserName" readonly required class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" readonly required class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Số điện thoại</label>
            <input asp-for="PhoneNumber" required class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Mật khẩu hiện tại</label>
            <input type="text" readonly value="@Model.PasswordHash" class="form-control" />
            
        </div>
        <div class="form-group">
            <label>Mật khẩu mới</label>
            <input type="text" name="PasswordHash" required class="form-control" />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button class="btn btn-primary">Cập nhật</button>
        </div>


    </form>
   
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


