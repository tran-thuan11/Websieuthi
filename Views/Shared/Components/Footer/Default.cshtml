@model ContactModel

@if (Model != null)
{
    <div class="row">
        <!-- Cột chứa thông tin công ty -->
        <div class="col-sm-3">
            <div class="companyinfo">
                <p>
                    <img src="~/media/logo/@Model.LogoImg" alt="Logo" class="img-fluid" style="max-width: 100%; height: auto;" />
                </p>
                <p>@Html.Raw(@Model.Description)</p>
            </div>
        </div>

        <!-- Cột chứa bản đồ -->
        <div class="col-sm-2 col-md-5">
            <div> @* class="map-container" style="margin-bottom: 0px;">
                @Html.Raw(@Model.Map) *@
            </div>
        </div>

        <!-- Cột chứa thông tin liên hệ -->
        <div class="col-sm-4">
            <div class="address" style="margin-top: 20px;">
                <h5><b>Name: @Model.Name</b></h5>
                <h5>Email: <a href="mailto:@Model.Email">@Model.Email</a></h5>
                <h5>Phone: <a href="tel:@Model.Phone">@Model.Phone</a></h5>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        <p>No contact data available.</p>
    </div>
}
