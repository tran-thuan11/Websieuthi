@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["title"] = "Danh sách vai trò";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Danh sách vai trò</title>
</head>
<body>
    <h3>Danh sách vai trò</h3>

    <a class="btn btn-primary" asp-action="Create" asp-controller="Role">Thêm vai trò</a>

    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên vai trò</th>
                <th>Vai trò (viết hoa)</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.NormalizedName</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Role" asp-route-Id="@item.Id">Sửa</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Role" asp-route-Id="@item.Id">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
