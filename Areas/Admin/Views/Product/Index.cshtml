@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Danh Sách Sản Phẩm";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Danh Sách Sản Phẩm</title>
</head>
<body>
    <h3>Danh Sách Sản Phẩm</h3>

    <a class="btn btn-primary" asp-action="Create" asp-controller="Product">Thêm Sản Phẩm</a>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Mã</th>
                <th>Tên Sản Phẩm</th>
                <th>Số Lượng</th>
                <th>Đã Bán</th>
                <th>Mô Tả</th>
                <th>Giá</th>
                <th>Hình Ảnh</th>
                <th>Slug</th>
                <th>Danh Mục</th>
                <th>Thương Hiệu</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td><b>@item.Quantity</b><br /><a asp-controller="Product" asp-action="AddQuantity" asp-route-Id="@item.Id">Thêm Số Lượng</a></td>
                    <td><b>@item.Sold</b></td>
                    <td>@Html.Raw(@item.Description)</td>
                    <td>@item.Price.ToString("#,##0 VNĐ")</td>
                    <td> <img src="~/media/products/@item.Image" width="120px" height="150px" /> </td>
                    <td> @item.Slug </td>
                    <td> @item.Category.Name </td>
                    <td> @item.Brand.Name </td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Product" asp-route-Id="@item.Id">Sửa</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Product" asp-route-Id="@item.Id">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>
