@model IEnumerable<OrderModel>

@{
    ViewData["title"] = "List Order";

    

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>Danh sách đơn hàng</h3>

    

    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Mã đơn</th>
                <th>Phí vận chuyển</th>
                <th>Mã Khuyến mãi</th>
                <th>Email</th>
                <th>Trạng thái</th>
                <th>Ngày đặt</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.OrderCode</td>
                    <td>@item.ShippingCost.ToString("#,##0 VNĐ")</td>
                    <td>@item.CouponCode</td>
                    <td>@item.UserName</td>
                    <td>
                        @if (item.Status == 1)
                        {
                            <span class="text text-success">Đơn hàng mới</span>
                        }
                        else if (item.Status == 2)
                        {
                            <span class="text text-primary">Đã xử lý</span>
                        }
                        else
                        {

                            <span class="text text-danger">Đã xử lý</span>
                        }
                    </td>
                    <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="ViewOrder" asp-controller="Order" asp-route-ordercode="@item.OrderCode">Xem đơn hàng</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Order" asp-route-ordercode="@item.OrderCode">Xóa</a>
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
   
</body>
</html>
